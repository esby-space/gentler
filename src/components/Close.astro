<svg id="chevron" class="w-10 cursor-pointer stroke-black dark:stroke-white -scale-100" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
    <g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round" stroke="#CCCCCC" stroke-width="0.144"></g><g id="SVGRepo_iconCarrier"> <path d="M15 6L9 12L15 18" stroke-width="2.4" stroke-linecap="round" stroke-linejoin="round"></path> </g>
</svg>

<script>
    const chevron = document.querySelector("#chevron") as HTMLElement;
    const nav = document.querySelector("nav")!;

    if (document.location.pathname == "/") chevron.style.visibility = "hidden";
    if (sessionStorage.getItem("sidebar") != "closed") {
        nav.dataset.close = "open";
        chevron.style.transform = "scale(1, 1)"
    }

    chevron.onclick = () => {
        if (sessionStorage.getItem("sidebar") == "closed") {
            nav.dataset.close = "open";
            sessionStorage.removeItem("sidebar");
            chevron.style.transform = "scale(1, 1)"
        } else {
            nav.dataset.close = "closed";
            sessionStorage.setItem("sidebar", "closed");
            chevron.style.transform = "scale(-1, 1)"
        }
    };
</script>

